<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLivros</servlet-name>
        <servlet-class>controle.ServletLivros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControleVendas</servlet-name>
        <servlet-class>controle.ServletControleVendas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRelatorio</servlet-name>
        <servlet-class>controle.ServletRelatorio</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLivros</servlet-name>
        <url-pattern>/ServletLivros</url-pattern>
        <url-pattern>/Livros/Todos</url-pattern>
        <url-pattern>/Livros/Remover</url-pattern>
        <url-pattern>/Livros/Buscar</url-pattern>
        <url-pattern>/Livros/Inserir</url-pattern>
        <url-pattern>/Livros/BuscarPNome</url-pattern>
        <url-pattern>/Livros/AlterarSelecionado</url-pattern>
        <url-pattern>/Livros/BuscarNome</url-pattern>
        <url-pattern>/Livros/RemoverSelecionado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControleVendas</servlet-name>
        <url-pattern>/ServletControleVendas</url-pattern>
        <url-pattern>/MostrarPedidos</url-pattern>
        <url-pattern>/FazerCompra</url-pattern>
        <url-pattern>/Adicionar</url-pattern>
        <url-pattern>/Remover</url-pattern>
        <url-pattern>/FinalizarCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRelatorio</servlet-name>
        <url-pattern>/Servlet/Relatorio</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>Resource</description>
        <res-ref-name>jdbc/gerenciadorlivros</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>
    <filter>
        <filter-name>ShiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Trabalho_Final</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
